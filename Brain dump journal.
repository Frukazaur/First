<body>
    <div class="container">
        <div class="header">
            <h1>üß† Newsletter Brain Dump</h1>
            <p>Let your thoughts flow freely. Ideas are waiting to emerge.</p>
        </div>

        <div class="content">
            <div class="progress">
                <div class="progress-bar" id="progressBar"></div>
            </div>

            <div class="counter" id="directionCounter"></div>

            <div id="dumpSection">
                <div class="direction-box">
                    <div class="direction-text" id="currentDirection"></div>
                </div>

                <div class="input-section">
                    <div class="textarea-container">
                        <textarea 
                            id="dumpInput" 
                            placeholder="Just start typing... let your thoughts flow without editing..."
                        ></textarea>
                        <div class="word-count" id="wordCount">0 words</div>
                    </div>

                    <div class="button-section">
                        <div class="hint">Press Ctrl+Enter or click Next to continue</div>
                        <div>
                            <button class="restart-btn" onclick="restartSession()">Restart</button>
                            <button class="next-btn" onclick="nextDirection()" id="nextBtn" disabled>Next</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="completionSection" style="display: none;">
                <div class="completion">
                    <div class="completion-icon">üéØ</div>
                    <h2>Brain Dump Complete!</h2>
                    <p class="completion-description">You've poured out your thoughts across 8 different directions. Now let's see what newsletter gold you've uncovered! Review your dumps below and watch for patterns, stories, or insights that could become your next newsletter.</p>

                    <div class="newsletter-ideas">
                        <h4>üîç Look for Newsletter Ideas in:</h4>
                        <p>‚Ä¢ Stories you told ‚Ä¢ Problems you mentioned ‚Ä¢ Insights you discovered ‚Ä¢ Patterns you noticed ‚Ä¢ Strong emotions you expressed ‚Ä¢ Things you're learning ‚Ä¢ Advice you gave yourself ‚Ä¢ Controversial takes you shared</p>
                    </div>

                    <div class="brain-dump-summary">
                        <h3>Your Complete Brain Dump Session</h3>
                        <div class="dumps-container" id="dumpsContainer"></div>
                        <div class="copy-section">
                            <button class="copy-btn" onclick="copyAllDumps()">üìã Copy All Dumps</button>
                            <span class="copy-feedback" id="copyFeedback">Copied to clipboard!</span>
                        </div>
                    </div>

                    <button class="new-session-btn" onclick="restartSession()">Start New Brain Dump</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const directions = [
            "Tomorrow something good's gonna happen because...",
            "Today I struggled with...",
            "Today I learned that...",
            "Something I wish I could tell my younger self is...",
            "I'm tired of pretending that...",
            "Lately I've been noticing...",
            "I used to think... but now I...",
            "This is probably controversial but..."
        ];

        let currentStep = 0;
        let dumps = [];

        function updateProgress() {
            const progress = (currentStep / directions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function updateCounter() {
            document.getElementById('directionCounter').textContent = `Direction ${currentStep + 1} of ${directions.length}`;
        }

        function updateWordCount() {
            const text = document.getElementById('dumpInput').value;
            const words = text.trim() ? text.trim().split(/\s+/).length : 0;
            document.getElementById('wordCount').textContent = `${words} words`;
        }

        function displayDirection() {
            if (currentStep < directions.length) {
                document.getElementById('currentDirection').textContent = directions[currentStep];
                document.getElementById('dumpInput').value = '';
                document.getElementById('dumpInput').focus();
                updateProgress();
                updateCounter();
                updateWordCount();
            } else {
                showCompletion();
            }
        }

        function showCompletion() {
            document.getElementById('dumpSection').style.display = 'none';
            document.getElementById('completionSection').style.display = 'block';
            document.getElementById('directionCounter').style.display = 'none';
            updateProgress();
            displayAllDumps();
        }

        function displayAllDumps() {
            const container = document.getElementById('dumpsContainer');
            container.innerHTML = '';

            dumps.forEach((dump, index) => {
                const dumpDiv = document.createElement('div');
                dumpDiv.className = 'dump-item';

                const directionDiv = document.createElement('div');
                directionDiv.className = 'dump-direction';
                directionDiv.textContent = directions[index];

                const dumpTextDiv = document.createElement('div');
                dumpTextDiv.className = 'dump-text';
                dumpTextDiv.textContent = dump;

                dumpDiv.appendChild(directionDiv);
                dumpDiv.appendChild(dumpTextDiv);
                container.appendChild(dumpDiv);
            });
        }

        function copyAllDumps() {
            let allText = "üß† Newsletter Brain Dump Session\n";
            allText += "Date: " + new Date().toLocaleDateString() + "\n";
            allText += "=" + "=".repeat(50) + "\n\n";

            dumps.forEach((dump, index) => {
                allText += `DIRECTION ${index + 1}:\n${directions[index]}\n\n`;
                allText += `MY BRAIN DUMP:\n${dump}\n\n`;
                allText += "-".repeat(50) + "\n\n";
            });

            navigator.clipboard.writeText(allText).then(() => {
                showCopyFeedback();
            }).catch(err => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = allText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showCopyFeedback();
            });
        }

        function showCopyFeedback() {
            const feedback = document.getElementById('copyFeedback');
            feedback.classList.add('show');
            setTimeout(() => {
                feedback.classList.remove('show');
            }, 3000);
        }

        function nextDirection() {
            const input = document.getElementById('dumpInput');
            const dump = input.value.trim();

            if (dump) {
                dumps[currentStep] = dump;
                currentStep++;
                displayDirection();
                document.getElementById('nextBtn').disabled = true;
            }
        }

        function restartSession() {
            currentStep = 0;
            dumps = [];
            document.getElementById('dumpSection').style.display = 'block';
            document.getElementById('completionSection').style.display = 'none';
            document.getElementById('directionCounter').style.display = 'block';
            displayDirection();
        }

        // Enable/disable next button based on input
        document.getElementById('dumpInput').addEventListener('input', function() {
            const hasText = this.value.trim().length > 0;
            document.getElementById('nextBtn').disabled = !hasText;
            updateWordCount();
        });

        // Handle Ctrl+Enter
        document.getElementById('dumpInput').addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'Enter') {
                if (!document.getElementById('nextBtn').disabled) {
                    nextDirection();
                }
            }
        });

        // Initialize
        displayDirection();
    </script>
</body>
</html>
